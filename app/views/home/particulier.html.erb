<section class="account-page section-padding">
   <div class="container">
      <div class="row" style="width:100%">
         <div class="col-lg-4 ">
            <div class="row no-gutters">
               <div class="col-md-12">
                  <div class="card card-body account-right">
                    <div class="user-profile-header">
                      <%= image_tag @user.image_profile, class: "round" %>
                       <h5 class="mb-1 text-secondary"> <%= @user.prénom.capitalize %> <%= @user.nom.capitalize %></h5>
                       <p> <%= show_num(@user.téléphone) %></p>
                       <p><%= @user.adresse %></p>
                    </div>
                    <center>
                      <%= image_tag "https://maps.googleapis.com/maps/api/staticmap?center='#{geoloc(@user.adresse)[0]},#{geoloc(@user.adresse)[1]}'&zoom=18&size=800x800&maptype=roadmap
                      &markers=color:red%7C#{geoloc(@user.adresse)[0]},#{geoloc(@user.adresse)[1]}&key=#{@apikey}", style: "width:500px;" %>
                    </center>
                  </div>
               </div>
            </div>
         </div>
         <div class="card col-md-2">
           <center><h5>Plats proposés par <%= @user.prénom %></h5></center>
           <% @user.plats.each do |plat| %>
           <%= link_to plat_path(id: plat.id) do %>
             <%= image_tag plat.photo_plat, style: "border-radius: 10%;" %>
           <% end %>
           <br>
           <%end%>
         </div>
         <div class="col-md-6">
           <% if current_user %>
             <center><h2>Laisser un commentaire à <%= @user.prénom %></h2></center>
             <%= render partial: 'comments/form' %>
           <% end %>
           <% @user.comments.each do |c|%>
           <br>
             <div class="container">
              <div class="row" style="width:100%">
                <div class="a-5" style="width:80%">
                  <div class="a-5-m a-bg-orange">
                     <%= c.body %>
                  </div>
                  <h4><%=User.find(c.auteur_id).prénom%> <%=User.find(c.auteur_id).nom%> <%= image_tag User.find(c.auteur_id).image_profile,class: "round", style: "width:50px" %> <span></span></h4>
                 </div>
              </div>
             </div>
           <%end%>
         </div>
      </div>
   </div>
</section>
