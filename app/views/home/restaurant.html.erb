<section class="account-page section-padding">
   <div class="container">
      <div class="row" style="width:100%">
         <div class="col-lg-4 ">
            <div class="row no-gutters">
               <div class="col-md-12">
                  <div class="card card-body account-right">
                    <div class="user-profile-header">
                      <%= image_tag @resto.image_resto %>
                       <h5 class="mb-1 text-secondary"> <%= @resto.nom.capitalize %></h5>
                       <p> <%= show_num(@resto.téléphone) %></p>
                    </div>
                    <center>
                      <%= image_tag "https://maps.googleapis.com/maps/api/staticmap?center='#{geoloc(@resto.adresse)[0]},#{geoloc(@resto.adresse)[1]}'&zoom=18&size=800x800&maptype=roadmap
                      &markers=color:red%7C#{geoloc(@resto.adresse)[0]},#{geoloc(@resto.adresse)[1]}&key=#{@apikey}", style: "width:500px;" %>
                    </center>
                  </div>
               </div>
            </div>
         </div>
         <div class="col-md-8 ">
           <% if current_user %>
             <%= render partial: 'comments/form' %>
           <% end %>
           <% @resto.comments.each do |c|%>
             <div class="container">
              <div class="row" style="width:100%">
                <div class="a-5" style="width:80%">
                  <div class="a-5-m a-bg-orange">
                    <%=c.titre%> <hr>
                     <%= c.body%><br>
                  </div>
                  <% if c.user %>
                    <h4><%=c.user.prénom%> <%=c.user.nom%> <%= image_tag c.user.image_profile, style: "width:50px" %> <span></span></h4>
                  <% else %>
                    <h4><%=c.restaurant.nom%> <%= image_tag c.restaurant.image_resto, style: "width:50px" %> <span></span></h4>
                  <% end %>
             </div>
             </div>
             </div>
           <%end%>

         </div>

      </div>
   </div>
</section>
