<center>
<h5 class="heading-design-h5">Connectez-vous (particuliers)</h5>
<%= form_for(:user, :url => session_path(:user)) do |f| %>
  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, placeholder: "email", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password %><br />
    <%= f.password_field :password, placeholder: "******", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Se connecter", class: "btn btn-lg btn-secondary" %>
  </div>
<% end %>
<%= link_to "M'inscrire", new_user_registration_path, class: "btn btn-primary" %>
<%= link_to "Je suis un restaurant", new_restaurant_session_path, class: "btn btn-primary" %>
</center>
